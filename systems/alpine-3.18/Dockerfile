FROM alpine:3.18

RUN apk add --no-cache \
    wget \
    autoconf \
    dpkg-dev \
    dpkg \
    file \
    g++ \
    gcc \
    libc-dev \
    make \
    pkgconf \
    re2c \
    tar \
    xz \
    bison \
    pcre-dev \
    libxml2-dev \
    libressl-dev \
    sqlite-dev \
    libpng-dev \
    freetype-dev \
    oniguruma-dev \
    gnu-libiconv-dev \
    vim \
    cmake \
    && mkdir -p /opt

WORKDIR /opt
